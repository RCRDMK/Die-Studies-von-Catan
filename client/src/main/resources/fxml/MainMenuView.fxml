<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="500.0" prefWidth="735.0" stylesheets="@../css/swp.css"
            xmlns="http://javafx.com/javafx/8" fx:controller="de.uol.swp.client.main.MainMenuPresenter">
    <children>
        <ListView fx:id="usersView" prefHeight="164.0" prefWidth="284.0" GridPane.rowIndex="1"/>
        <ListView fx:id="lobbiesView" layoutX="284.0" prefHeight="164.0" prefWidth="316.0" GridPane.rowIndex="3"/>
        <TextField fx:id="lobbyNameTextField" layoutX="284" layoutY="164" onAction="#onCreateLobby" prefWidth="223.0"
                   promptText="Enter Lobby Name"/>
        <Button layoutX="506" layoutY="164.0" mnemonicParsing="false" onAction="#onCreateLobby" prefHeight="52.0"
                prefWidth="98.0" text="CreateLobby"/>
        <Label fx:id="lobbyNameInvalid" layoutX="290.0" layoutY="230.0" text="invalid character for Lobby Name!"
               visible="false" styleClass="error-label"/>
        <Label fx:id="lobbyAlreadyExistsLabel" layoutX="290.0" layoutY="230.0" text="lobby already exists!"
               visible="false" styleClass="error-label"/>
        <Button layoutX="546.0" layoutY="374.0" mnemonicParsing="false" onAction="#onLogout" text="Logout"
                GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        <TextArea fx:id="textArea" editable="false" layoutY="164.0" prefHeight="191.0" prefWidth="284.0"
                  GridPane.rowIndex="2"/>
        <TextField fx:id="inputField" layoutY="355.0" onAction="#onSendMessage" prefHeight="25.0" prefWidth="207.0"
                   promptText="Send your Message!" GridPane.rowIndex="3"/>
        <Button layoutX="207.0" layoutY="355.0" mnemonicParsing="false" onAction="#onSendMessage" prefHeight="25.0"
                prefWidth="77.0" text="Send"/>
        <Button layoutX="478.0" layoutY="374.0" mnemonicParsing="false" onAction="#onUserSettingsButtonPressed"
                text="Settings"/>
            <Button layoutX="290.0" layoutY="373.0" mnemonicParsing="false" onAction="#onGameRulesPressed"
                text="Game Rules"/>
        <PasswordField fx:id="lobbyPasswordField" layoutX="284.0" layoutY="191.0" prefHeight="25.0" prefWidth="98.0"
                       promptText="Enter password" visible="false"/>
        <CheckBox fx:id="passwordCheckBox" layoutX="394.0" layoutY="195.0" mnemonicParsing="false" prefHeight="17.0"
                  prefWidth="108.0" text="Add password" onAction="#onLobbyPw"/>
    </children>
</AnchorPane>
