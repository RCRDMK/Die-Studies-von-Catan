      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
      <AnchorPane prefHeight="300.0" prefWidth="407.0" stylesheets="@../css/swp.css" GridPane.columnIndex="1" GridPane.rowIndex="1">
          <Label layoutX="44.0" layoutY="17.0" text="Login" />
          <TextField id="loginField" fx:id="loginField" layoutX="142.0" layoutY="12.0" promptText="Enter Login">
              <tooltip>
                  <Tooltip text="Enter your login here" />
              </tooltip>
          </TextField>
          <PasswordField id="passwordField" fx:id="passwordField1" layoutX="142.0" layoutY="48.0" promptText="Enter Password" />
          <PasswordField id="passwordField" fx:id="passwordField2" layoutX="142.0" layoutY="85.0" promptText="Repeat Password" />
          <Label layoutX="44.0" layoutY="53.0" text="Password" />
          <Label layoutX="44.0" layoutY="90.0" text="Password" />
          <TextField id="emailField" fx:id="emailField1" layoutX="142.0" layoutY="123.0" promptText="Enter E-Mail" />
