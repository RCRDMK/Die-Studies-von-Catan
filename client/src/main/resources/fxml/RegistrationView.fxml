          <Label layoutX="44.0" layoutY="127.0" text="E-Mail" />
          <Label layoutX="44.0" layoutY="167.0" text="E-Mail" />
          <Button id="registerButton" defaultButton="true" layoutX="112.0" layoutY="213.0" mnemonicParsing="false" onAction="#onRegisterButtonPressed" text="Register" />
          <Button id="cancelButton" layoutX="204.0" layoutY="213.0" mnemonicParsing="false" onAction="#onCancelButtonPressed" text="Cancel" />
      </AnchorPane>
   </children>
</GridPane>
