<AnchorPane xmlns:fx="http://javafx.com/fxml/1" id="summary" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="500"
            prefWidth="735.0" stylesheets="@../css/swp.css" xmlns="http://javafx.com/javafx/8"
