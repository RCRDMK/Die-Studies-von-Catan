<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="500.0" prefWidth="735.0" stylesheets="@../css/swp.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uol.swp.client.lobby.LobbyPresenter">
    <TextArea fx:id="lobbyChatArea" editable="false" layoutX="437.0" layoutY="14.0" prefHeight="200" prefWidth="284.0" GridPane.rowIndex="2" />
    <TextField fx:id="lobbyChatInput" layoutX="444.0" layoutY="229.0" onAction="#onSendMessage" prefHeight="25.0" prefWidth="196.0" promptText="Send your Message!" GridPane.rowIndex="3" />
    <Button layoutX="644.0" layoutY="229.0" mnemonicParsing="false" onAction="#onSendMessage" prefHeight="25.0" prefWidth="77.0" text="Send" />
    <Label fx:id="notEnoughPlayersLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="349.0" layoutY="321.0" prefHeight="17.0" prefWidth="189.0" text="Not enough players to start game" textAlignment="CENTER" visible="false" />
    <Label fx:id="notLobbyOwnerLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="349.0" layoutY="321.0" prefHeight="17.0" prefWidth="189.0" text="You are not the lobby owner" textAlignment="CENTER" visible="false" />
    <Label fx:id="gameAlreadyExistsLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="349.0" layoutY="321.0" prefHeight="17.0" prefWidth="189.0" text="Game already exists" textAlignment="CENTER" visible="false" />
    <Text fill="white" layoutX="14.0" layoutY="404.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Gamefieldtype" />
    <RadioButton fx:id="standardGameField" layoutX="14.0" layoutY="412.0" mnemonicParsing="false" onAction="#onStandardGameField" text="Standard">
        <toggleGroup>
            <ToggleGroup fx:id="gameFieldToggleButtons" />
        </toggleGroup>
    </RadioButton>
    <RadioButton fx:id="randomGameField" layoutX="14.0" layoutY="437.0" mnemonicParsing="false" onAction="#onRandomGameField" text="Random">
        <toggleGroup>
            <fx:reference source="gameFieldToggleButtons" />
        </toggleGroup>
    </RadioButton>
    <RadioButton fx:id="veryRandomGameField" layoutX="14.0" layoutY="462.0" mnemonicParsing="false" onAction="#onVeryRandomGameField" text="VeryRandom">
        <toggleGroup>
            <fx:reference source="gameFieldToggleButtons" />
        </toggleGroup>
    </RadioButton>
    <ListView fx:id="lobbyUsersView" prefHeight="200.0" prefWidth="200.0" />
    <Button layoutX="659.0" layoutY="467.0" mnemonicParsing="false" onAction="#onStartGame" text="Start Game" />
    <Button layoutX="237.0" layoutY="467.0" mnemonicParsing="false" onAction="#onLeaveLobby" text="Leave Lobby" />
</AnchorPane>
